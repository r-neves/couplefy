generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id         String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String?    @db.Uuid
  group_id   String?    @db.Uuid
  name       String     @db.VarChar(100)
  color      String?    @default("#6366f1") @db.VarChar(7)
  icon       String?    @db.VarChar(50)
  created_at DateTime   @default(now()) @db.Timestamp(6)
  updated_at DateTime   @default(now()) @db.Timestamp(6)
  groups     groups?    @relation(fields: [group_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "categories_group_id_groups_id_fk")
  users      users?     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "categories_user_id_users_id_fk")
  expenses   expenses[]
}

model expenses {
  id          String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String     @db.Uuid
  group_id    String?    @db.Uuid
  category_id String     @db.Uuid
  amount      Decimal    @db.Decimal(10, 2)
  description String?
  date        DateTime   @db.Timestamp(6)
  created_at  DateTime   @default(now()) @db.Timestamp(6)
  updated_at  DateTime   @default(now()) @db.Timestamp(6)
  categories  categories @relation(fields: [category_id], references: [id], onUpdate: NoAction, map: "expenses_category_id_categories_id_fk")
  groups      groups?    @relation(fields: [group_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "expenses_group_id_groups_id_fk")
  users       users      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "expenses_user_id_users_id_fk")
}

model goals {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id       String?   @db.Uuid
  group_id      String?   @db.Uuid
  name          String    @db.VarChar(100)
  target_amount Decimal?  @db.Decimal(10, 2)
  color         String?   @default("#10b981") @db.VarChar(7)
  icon          String?   @db.VarChar(50)
  description   String?
  created_at    DateTime  @default(now()) @db.Timestamp(6)
  updated_at    DateTime  @default(now()) @db.Timestamp(6)
  groups        groups?   @relation(fields: [group_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "goals_group_id_groups_id_fk")
  users         users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "goals_user_id_users_id_fk")
  savings       savings[]
}

model group_members {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  group_id  String   @db.Uuid
  user_id   String   @db.Uuid
  joined_at DateTime @default(now()) @db.Timestamp(6)
  groups    groups   @relation(fields: [group_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "group_members_group_id_groups_id_fk")
  users     users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "group_members_user_id_users_id_fk")
}

model groups {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String          @db.VarChar(255)
  created_by    String          @db.Uuid
  created_at    DateTime        @default(now()) @db.Timestamp(6)
  updated_at    DateTime        @default(now()) @db.Timestamp(6)
  categories    categories[]
  expenses      expenses[]
  goals         goals[]
  group_members group_members[]
  users         users           @relation(fields: [created_by], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "groups_created_by_users_id_fk")
  invites       invites[]
  savings       savings[]
}

model invites {
  id          String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  group_id    String        @db.Uuid
  invited_by  String        @db.Uuid
  invite_code String        @unique(map: "invites_invite_code_unique") @db.VarChar(255)
  expires_at  DateTime      @db.Timestamp(6)
  created_at  DateTime      @default(now()) @db.Timestamp(6)
  status      invite_status @default(pending)
  groups      groups        @relation(fields: [group_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "invites_group_id_groups_id_fk")
  users       users         @relation(fields: [invited_by], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "invites_invited_by_users_id_fk")
}

model savings {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String   @db.Uuid
  group_id    String?  @db.Uuid
  goal_id     String   @db.Uuid
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  date        DateTime @db.Timestamp(6)
  created_at  DateTime @default(now()) @db.Timestamp(6)
  updated_at  DateTime @default(now()) @db.Timestamp(6)
  goals       goals    @relation(fields: [goal_id], references: [id], onUpdate: NoAction, map: "savings_goal_id_goals_id_fk")
  groups      groups?  @relation(fields: [group_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "savings_group_id_groups_id_fk")
  users       users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "savings_user_id_users_id_fk")
}

model users {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String          @unique(map: "users_email_unique") @db.VarChar(255)
  name          String          @db.VarChar(255)
  avatar_url    String?
  supabase_id   String          @unique(map: "users_supabase_id_unique") @db.VarChar(255)
  created_at    DateTime        @default(now()) @db.Timestamp(6)
  updated_at    DateTime        @default(now()) @db.Timestamp(6)
  categories    categories[]
  expenses      expenses[]
  goals         goals[]
  group_members group_members[]
  groups        groups[]
  invites       invites[]
  savings       savings[]
}

enum invite_status {
  pending
  accepted
  rejected
  expired
}
